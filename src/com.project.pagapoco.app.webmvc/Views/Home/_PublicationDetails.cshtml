@using com.project.pagapoco.app.webapi.Dto.Response
@model PublicationResponse

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Código:</dt>
            <dd class="col-sm-8">@Model.CodePublication</dd>

            <dt class="col-sm-4">Título:</dt>
            <dd class="col-sm-8">@Model.Title</dd>

            <dt class="col-sm-4">Descripción:</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4">Precio:</dt>
            <dd class="col-sm-8">@Model.Price.ToString("C")</dd>
        </dl>
    </div>
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Marca:</dt>
            <dd class="col-sm-8">@Model.Brand</dd>

            <dt class="col-sm-4">Modelo:</dt>
            <dd class="col-sm-8">@Model.Model</dd>

            <dt class="col-sm-4">Año:</dt>
            <dd class="col-sm-8">@Model.Year</dd>

            <dt class="col-sm-4">Usuario:</dt>
            <dd class="col-sm-8">@Model.UserId</dd>
        </dl>
    </div>
</div>

<div class="row mt-3">
    <div class="col-12">
        <h5>Imágenes</h5>
        <div class="d-flex flex-wrap">
            <img class="w-25 h-25" src="https://www.shutterstock.com/image-vector/default-ui-image-placeholder-wireframes-600nw-1037719192.jpg" class="img-thumbnail m-2" alt="...">
            <img class="w-25 h-25" src="https://www.shutterstock.com/image-vector/default-ui-image-placeholder-wireframes-600nw-1037719192.jpg" class="img-thumbnail m-2" alt="...">
        </div>
    </div>
</div>